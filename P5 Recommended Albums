  //textSize(50);
  
}

//Try reference text for output

function selection(bandInput) {
var bandName = input.value();
text('What is the Band / Artist Name?', 10, 45);
//input.value('');

if(bandName == 'Deep Purple'){
console.log(DeepPurple);
}
else if(bandName == 'Slaves to Gravity'){
console.log(SlavesToGravity);
}
else if(bandName == 'Peter Gabriel'){
console.log(PeterGabriel);
}
else if(bandName == 'Julian Cope'){
console.log(JulianCope);  
}
else if(bandName == 'Air'){
console.log(Air);
}
else if(bandName == 'Beck'){
console.log(Beck);
}
else if(bandName == 'IQ'){
console.log(IQ);
}
else if(bandName == 'Muse'){
console.log(Muse);
}
else {
console.log('Band or Artist not found');
}
}
