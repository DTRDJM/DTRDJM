let bandName = 0;


//const RecommendedDeepPurple = ('In Rock, Fireball, Machinehead, Who Do We Think We Are, Made in Japan');
const DeepPurple = ('In Rock, Fireball, Machinehead, Who Do We Think We Are, Made in Japan');
const SlavesToGravity = ('Scatter the Crow, UnderWaterOuterSpace');
const PeterGabriel = ('1 Car, 3 Melt, 4 Security, So, Us');
const JulianCope = ('World Shut Your Mouth, Fried, Saint Julian, My Nation Underground, Peggy Suicide, Jehovahkill, Autogeddon, 20 Mothers, Interpreter, Revolutionary Suicide');
const Air = ('Moon Safari, Talkie Walkie, Pocket Symphony, Love 2');
const Beck = ('Mellow Gold, Mutations, Sea Change, The Information, Modern Guilt');
const IQ = ('Nomzamo, Are You Sitting Comfortably?');
const Muse = ('Origin of Symmetry, Black Holes and Revelations, The Resistance, Live at Rome Olympic Stadium');


function setup() {
createCanvas(500, 400);
background(175);


input = createInput();
input.position(20, 75);


button = createButton('Submit');
button.position(input.x + input.width, 75);
button.mousePressed(selection);


textSize(25);
}



function draw() {
var bandInput = text('What is the Band / Artist Name?', 10, 45);
  //Above amendment by Bradie
  
